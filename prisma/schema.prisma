generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        

model Licor {
  id               String    @id @default(uuid())
  tipo             String
  marca            String
  estilo_graduacion String  
  cantidad         Int
  stock_critico    Int
  proveedor        Proveedor @relation(fields: [id_proveedor], references: [id])
  id_proveedor     String
  Consumo          Consumo[]
}

model Proveedor {
  id        String  @id @default(uuid())
  nombre    String
  telefono  String
  email     String
  direccion String
  licor     Licor[]
}

model Consumo {
  id       String   @id @default(uuid())
  fecha    DateTime
  cantidad Int
  licor    Licor    @relation(fields: [id_licor], references: [id])
  id_licor String
}
